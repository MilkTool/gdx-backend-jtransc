<project
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
        xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.jtransc.media</groupId>
        <artifactId>jtransc-media-parent</artifactId>
        <relativePath>../jtransc-media-parent</relativePath>
        <version>0.1.2</version>
    </parent>

    <artifactId>jtransc-media-imports-lime</artifactId>

    <dependencies>
        <dependency>
            <groupId>com.jtransc</groupId>
            <artifactId>jtransc-rt-core</artifactId>
            <version>${jtransc.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.jtransc</groupId>
                <artifactId>jtransc-buildjar-maven-plugin</artifactId>
                <version>${jtransc.version}</version>
                <configuration>
                    <libraries>
                        <param>lime:2.9.0</param>
                    </libraries>
                    <includePackages>
                        <param>lime</param>
                    </includePackages>
                    <includePackagesRec>
                        <param>lime.ui</param>
                        <param>lime.app</param>
                        <param>lime.audio</param>
                        <param>lime.math</param>
                        <param>lime.project</param>
                        <param>lime.system</param>
                        <param>lime.text</param>
                        <param>lime.utils</param>
                        <param>lime.vm</param>
                        <param>lime.tool</param>
                        <param>haxe.io</param>
                    </includePackagesRec>
                    <target>cpp</target>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>jtransc-buildjar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
