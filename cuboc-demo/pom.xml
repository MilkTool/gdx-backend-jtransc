<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<packaging>jar</packaging>

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.jtransc.gdx</groupId>
		<artifactId>gdx-backend-jtransc-parent</artifactId>
		<version>0.2.3</version>
		<relativePath>..</relativePath>
	</parent>

	<properties>
		<gdx.version>1.9.2</gdx.version>
		<jtransc.version>0.2.3</jtransc.version>
	</properties>

	<artifactId>cuboc-badlogicgames-demo</artifactId>

	<dependencies>
		<!--
		<dependency>
			<groupId>com.badlogicgames.gdx</groupId>
			<artifactId>gdx</artifactId>
			<version>${gdx.version}</version>
		</dependency>
		<dependency>
			<groupId>com.badlogicgames.gdx</groupId>
			<artifactId>gdx-platform</artifactId>
			<version>${gdx.version}</version>
			<scope>compile</scope>
		</dependency>
		-->
	</dependencies>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<resources>
			<resource>
				<directory>assets</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<id>test</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${basedir}/src_desktop</source>
								<source>${basedir}/src</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>jtransc-js</id>
			<activation>
				<property>
					<name>jtransc-js</name>
					<value>true</value>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>com.jtransc.gdx</groupId>
					<artifactId>gdx-backend-jtransc</artifactId>
					<version>${jtransc.version}</version>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>com.jtransc</groupId>
						<artifactId>jtransc-maven-plugin</artifactId>
						<version>${jtransc.version}</version>
						<configuration>
							<mainClass>CubocJTransc</mainClass>
							<targets>
								<param>haxe:js</param>
							</targets>
							<release>true</release>
							<assets>
								<asset>assets</asset>
							</assets>
							<embedResources>true</embedResources>
							<minimizeNames>false</minimizeNames>
						</configuration>
						<executions><execution><goals><goal>jtransc</goal></goals></execution></executions>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>build-helper-maven-plugin</artifactId>
						<version>1.4</version>
						<executions>
							<execution>
								<id>test</id>
								<phase>generate-sources</phase>
								<goals>
									<goal>add-source</goal>
								</goals>
								<configuration>
									<sources>
										<source>${basedir}/src_jtransc</source>
										<source>${basedir}/src</source>
									</sources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>jtransc-cpp</id>
			<activation>
				<property>
					<name>jtransc-cpp</name>
					<value>true</value>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>com.jtransc.gdx</groupId>
					<artifactId>gdx-backend-jtransc</artifactId>
					<version>${jtransc.version}</version>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>com.jtransc</groupId>
						<artifactId>jtransc-maven-plugin</artifactId>
						<version>${jtransc.version}</version>
						<configuration>
							<mainClass>CubocJTransc</mainClass>
							<targets>
								<param>haxe:windows</param>
							</targets>
							<release>false</release>
							<assets>
								<asset>assets</asset>
							</assets>
							<embedResources>true</embedResources>
							<minimizeNames>false</minimizeNames>
						</configuration>
						<executions><execution><goals><goal>jtransc</goal></goals></execution></executions>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>build-helper-maven-plugin</artifactId>
						<version>1.4</version>
						<executions>
							<execution>
								<id>test</id>
								<phase>generate-sources</phase>
								<goals>
									<goal>add-source</goal>
								</goals>
								<configuration>
									<sources>
										<source>${basedir}/src_jtransc</source>
										<source>${basedir}/src</source>
									</sources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>desktop</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<dependencies>
				<dependency>
					<groupId>com.badlogicgames.gdx</groupId>
					<artifactId>gdx-backend-lwjgl</artifactId>
					<version>${gdx.version}</version>
					<scope>compile</scope>
				</dependency>

				<dependency>
					<groupId>com.badlogicgames.gdx</groupId>
					<artifactId>gdx-platform</artifactId>
					<version>${gdx.version}</version>
					<classifier>natives-desktop</classifier>
					<scope>compile</scope>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>build-helper-maven-plugin</artifactId>
						<version>1.4</version>
						<executions>
							<execution>
								<id>test</id>
								<phase>generate-sources</phase>
								<goals>
									<goal>add-source</goal>
								</goals>
								<configuration>
									<sources>
										<source>${basedir}/src_desktop</source>
										<source>${basedir}/src</source>
									</sources>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
